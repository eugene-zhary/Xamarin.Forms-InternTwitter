<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="InterTwitter.Controls.SearchNavigationBar"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:InterTwitter.Controls"
    x:Name="searchNavBar">


    <Grid.RowDefinitions>
        <RowDefinition Height="47*" />
        <RowDefinition Height="1*" />
    </Grid.RowDefinitions>
    <Image
        Margin="12,12,0,6"
        HorizontalOptions="Start"
        Source="pic_profile_big">
        <Image.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding PicProfileTapGestureRecognizer}" CommandParameter="{Binding .}" />
        </Image.GestureRecognizers>
    </Image>

    <Frame BackgroundColor="{StaticResource Grey Light}">
        <controls:BorderlessEntry Grid.Column="1" BackgroundColor="{StaticResource Grey Light}" />
    </Frame>

    <Line
        Grid.Row="1"
        Grid.Column="0"
        Grid.ColumnSpan="3"
        BackgroundColor="{StaticResource Light Grey}" />
</Grid>