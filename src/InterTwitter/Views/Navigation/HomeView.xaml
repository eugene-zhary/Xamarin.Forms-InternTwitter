<?xml version="1.0" encoding="utf-8" ?>
<local:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InterTwitter.Views.Navigation.HomeView"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:local="clr-namespace:InterTwitter.Views"
             xmlns:controls="clr-namespace:InterTwitter.Controls"
             IconImageSource="{Binding IconPath}">
    <Grid RowSpacing="0">

        <controls:CustomCollectionView ItemsSource="{Binding PostCollection}" ItemsUpdatingScrollMode="KeepItemsInView"
                                       ScrollState="{Binding ScrollState}">
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="200"/>
                        </Grid.RowDefinitions>

                        <Label Text="{Binding Text}" Style="{StaticResource Body1}"/>
                        <Image Grid.Row="1" Source="pic_empty_state.png"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
        </controls:CustomCollectionView>

        <controls:FloationActionButton ScrollState="{Binding ScrollState}"
                                       VerticalOptions="End" HorizontalOptions="End" 
                                       ImageSource="ic_add_white.png"
                                       Margin="30" HeightRequest="55" WidthRequest="55"
                                       CornerRadius="30" BackgroundColor="#2356C5"/>

        <controls:FeedNavigationBar VerticalOptions="Start" HorizontalOptions="FillAndExpand"
                                    Margin="{Binding Margin}" ScrollState="{Binding ScrollState}"/>
        
    </Grid>
</local:BaseContentPage>